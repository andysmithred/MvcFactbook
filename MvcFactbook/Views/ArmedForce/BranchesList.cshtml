@model MvcFactbook.ViewModels.Models.Main.ArmedForceView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />
<div class="d-flex bg-dark">
    @if (Model.Flags.Count > 0)
    {
        <div class="mr-3">
            <a asp-action="FlagsList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex alert bg-success">
                    <div><img src="~/images/icons/flag-dark.png" style="height:24px;width:24px" /></div>
                    <div class="pl-3"><h5>Flags</h5></div>
                    <div class="pl-3"><h5>@Model.Flags.Count</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.Branches.Count > 0)
    {
        <div class="mr-3">
            <a asp-action="BranchesList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex alert bg-warning">
                    <div><img src="~/images/icons/branch-dark.png" style="height:24px;width:24px" /></div>
                    <div class="pl-3"><h5>Branches</h5></div>
                    <div class="pl-3"><h5>@Model.Branches.Count</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
<div class="card border-0">
    <div class="card-header bg-secondary text-white">Branches</div>
    <div class="card-body bg-dark p-0">
        <partial name="PartialListDetailsBranches" model="@Model.Branches.OrderBy(x => x.Name)" />
    </div>
</div>