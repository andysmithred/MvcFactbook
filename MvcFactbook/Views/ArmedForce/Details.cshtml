@model MvcFactbook.ViewModels.Models.Main.ArmedForceView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />

<div class="d-flex bg-dark">
    @if (Model.Flags.Count > 0)
    {
        <div class="mr-3">
            <a asp-action="FlagsList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex alert bg-success">
                    <div><img src="~/images/icons/flag-dark.png" style="height:24px;width:24px" /></div>
                    <div class="pl-3"><h5>Flags</h5></div>
                    <div class="pl-3"><h5>@Model.Flags.Count</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.Branches.Count > 0)
    {
        <div class="mr-3">
            <a asp-action="BranchesList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex alert bg-warning">
                    <div><img src="~/images/icons/branch-dark.png" style="height:24px;width:24px" /></div>
                    <div class="pl-3"><h5>Branches</h5></div>
                    <div class="pl-3"><h5>@Model.Branches.Count</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<div class="card-deck">
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Details</h5></div>
                <div class="ml-auto"><h5><i class="fas fa-info-circle"></i></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Id), Value = Model.Id }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Name), Value = Model.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Code), Value = Model.Code }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Budget), Value = Model.BudgetLabel }' />
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Flags</h5></div>
                <div class="ml-auto">
                    <h5><a asp-controller="ArmedForceFlag" asp-action="CreateByArmedForce" asp-route-id="@Model.Id" style="color:white" title="Add Flag"><i class="fas fa-plus"></i></a></h5>
                </div>
            </div>
        </div>
        <div class="card-body bg-transparent">
            @if (Model.Flags.Count > 0)
            {
                foreach (var item in Model.Flags.OrderBy(x => x.Name))
                {
                    <partial name="ActionListFlag" model='new { Controller = "Flag", Action = "Details", Value = item.Name, RouteId = item.Id, Image = item.ImageSource }' />
                }
            }
            else
            {
                <partial name="BasicListLabel" model='new { Value = "--", Icon = string.Empty }' />
            }
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Branches</h5></div>
                <div class="ml-auto">
                    <h5><a asp-controller="Branch" asp-action="CreateByArmedForce" asp-route-id="@Model.Id" style="color:white" title="Add Branch"><i class="fas fa-plus"></i></a></h5>
                </div>
            </div>
        </div>
        <div class="card-body bg-transparent">
            @if (Model.Branches.Count > 0)
            {
                foreach (var item in Model.Branches.OrderBy(x => x.Name))
                {
                    <partial name="ActionListFlag" model='new { Controller = "Branch", Action = "Details", Value = item.Name, RouteId = item.Id, Image = item.CurrentFlag?.ImageSource }' />
                }
            }
            else
            {
                <partial name="BasicListLabel" model='new { Value = "--", Icon = string.Empty }' />
            }
        </div>
    </div>
</div>