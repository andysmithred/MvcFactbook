@model MvcFactbook.ViewModels.Models.Main.ArmedForceFlagView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />

<div class="d-flex bg-dark mt-3">
    @if (Model.ArmedForce != null)
    {
        <div class="mr-3">
            <a asp-controller="ArmedForce" asp-action="Details" asp-route-id="@Model.ArmedForceId" class="text-dark">
                <div class="d-flex alert bg-primary">
                    <div><i class="fas fa-map-marker-alt" style="font-size:26px"></i></div>
                    <div class="pl-3"><h5>@Model.ArmedForce.Name</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }

    @if (Model.Flag != null)
    {
        <div class="mr-3">
            <a asp-controller="Flag" asp-action="Details" asp-route-id="@Model.FlagId" class="text-dark">
                <div class="d-flex alert bg-warning">
                    <div><img class="rounded" src="@Model.Flag.ImageSource" alt="Card image" style="height:25px;width:25px;object-fit: cover;overflow: hidden;opacity:0.3"></div>
                    <div class="pl-3"><h5>@Model.Flag.Name</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<div class="card-deck">
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Armed Force</h5></div>
                <div class="ml-auto"><h5><i class="fas fa-map-marker-alt"></i></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Id), Value = Model.ArmedForceId }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.ArmedForce.Name), Value = Model.ArmedForce.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.ArmedForce.Code), Value = Model.ArmedForce.Code }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.ArmedForce.Budget), Value = Model.ArmedForce.Budget }' />
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Flag</h5></div>
                <div class="ml-auto"><h5><i class="fas fa-atlas"></i></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Id), Value = Model.FlagId }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Flag.Name), Value = Model.Flag.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Flag.Description), Value = Model.Flag.Description }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Flag.Code), Value = Model.Flag.Code }' />
        </div>
    </div>
</div>