@model MvcFactbook.ViewModels.Models.Main.ArmedForceFlagView

<div class="card alert alert-dark rounded p-2 w-100">
    <div class="d-flex">
        <div>
            <i class='fas fa-map-marker-alt p-2' style='font-size:40px'></i>
        </div>
        <div class="p-2 pl-3">
            <h3>@Model.ArmedForce.Name</h3>
        </div>
        <div class="p-2 pr-3 ml-auto">
            <h3>@Model.Flag.Name</h3>
        </div>
        <div>
            <img class="card-img-top-50 rounded" src="@Model.Flag.ImageSource" alt="Card image" style="height:50px;object-fit: cover;overflow: hidden;opacity:0.3">
        </div>
    </div>
</div>