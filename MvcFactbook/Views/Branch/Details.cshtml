@model MvcFactbook.ViewModels.Models.Main.BranchView

@{
    ViewData["Title"] = "Details";
}

<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />
<hr class="bg-secondary" />
<div class="d-flex mt-3 p-2">
    @if (Model.ArmedForce != null)
    {
        <div class="mr-4">
            <a asp-controller="ArmedForce" asp-action="Details" asp-route-id="@Model.ArmedForceId">
                <div class="d-flex">
                    <div><img class="rounded" src="@Model.ArmedForce.ImageSource" alt="Card image" style="height:25px;width:25px;object-fit: cover;overflow: hidden;opacity:0.3"></div>
                    <div class="pl-2 text-white">@Model.ArmedForce.Name</div>
                    <div class="ml-auto pl-2">
                        <h5><i class='fas fa-angle-right text-white'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.BranchType != null)
    {
        <div class="mr-4">
            <a asp-controller="BranchType" asp-action="Details" asp-route-id="@Model.BranchTypeId">
                <div class="d-flex">
                    <div><img src="~/images/icons/@Model.BranchType.IconLight" style="height:20px;width:20px" /></div>
                    <div class="pl-2 text-white">@Model.BranchType.Type</div>
                    <div class="ml-auto pl-2">
                        <h5><i class='fas fa-angle-right text-white'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.Flags.Count > 0)
    {
        <div class="mr-4">
            <a asp-action="FlagsList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex">
                    <div><img src="~/images/icons/flag-light.png" style="height:20px;width:20px" /></div>
                    <div class="pl-2 text-white">Flags</div>
                    <div class="pl-2 text-white">@Model.Flags.Count</div>
                    <div class="ml-auto pl-2">
                        <h5><i class='fas fa-angle-right text-white'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.ShipServices.Count > 0)
    {
        <div class="mr-4">
            <a asp-action="ShipServicesList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex">
                    <div><img src="~/images/icons/shipservice-light.png" style="height:20px;width:20px" /></div>
                    <div class="pl-2 text-white">Ships</div>
                    <div class="pl-2 text-white">@Model.ShipServices.Count</div>
                    <div class="ml-auto pl-2">
                        <h5><i class='fas fa-angle-right text-white'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
<hr class="bg-secondary" />
<div class="d-flex flex-row flex-wrap mt-2">
    <div class="p-2 w-25">
        <div class="text-muted"><h6>@Html.DisplayNameFor(x => x.Name)</h6></div>
        <div class="text-white"><h4>@Model.Name</h4></div>
    </div>
    <div class="p-2 w-25">
        <div class="text-muted"><h6>@Html.DisplayNameFor(x => x.ArmedForce)</h6></div>
        <div class="text-white"><h4>@Model.ArmedForce.Name</h4></div>
    </div>
    <div class="p-2 w-25">
        <div class="text-muted"><h6>@Html.DisplayNameFor(x => x.BranchType)</h6></div>
        <div class="text-white"><h4>@Model.BranchType.Type</h4></div>
    </div>
</div>
<hr class="bg-secondary" />
@if (Model.BranchFlags.Count > 0)
{
    <div class="text-muted p-2"><h5>Flags</h5></div>
    <div class="d-flex flex-row flex-wrap mt-2">
        @foreach (var item in Model.BranchFlags.OrderBy(x => x.Start))
        {
            <div class="pr-4 pl-2 w-25">
                <a asp-controller="Flag" asp-action="Details" asp-route-id="@item.FlagId">
                    <div class="d-flex flex-row">
                        <div class="pt-2 pr-2">
                            <img class="rounded" src="@item.Flag.ImageSource" alt="Card image" style="height:40px;width:40px;object-fit: cover;overflow: hidden;opacity:0.4" />
                        </div>
                        <div class="p-2">
                            <div class="text-white"><h4>@item.Flag.Name</h4></div>
                            <div class="text-muted"><h6>@item.DateLabel</h6></div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
    <hr class="bg-secondary" />
}
@if (Model.ShipServices.Count > 0)
{
    <div class="text-muted p-2"><h5>Ships</h5></div>
    <div class="d-flex flex-row flex-wrap mt-2">
        @foreach (var item in Model.ShipServices.OrderBy(x => x.Name))
        {
            <a asp-controller="ShipService" asp-action="Details" asp-route-id="@item.Id" class="text-dark w-25 p-2">
                <div class="text-white">
                    <img class="rounded" src="@item.ImageSource" alt="Card image" style="height:20px;width:20px;object-fit: cover;overflow: hidden;opacity:0.4">
                    <span class="pl-2">@item.Name</span>
                </div>
            </a>
        }
    </div>
    <hr class="bg-secondary" />
}
