@model MvcFactbook.ViewModels.Models.Main.BranchView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />

<div class="d-flex bg-dark mt-3">
    @if (Model.ArmedForce != null)
    {
        <div class="mr-3">
            <a asp-controller="ArmedForce" asp-action="Details" asp-route-id="@Model.ArmedForceId" class="text-dark">
                <div class="d-flex alert bg-danger">
                    <div><img class="rounded" src="@Model.ArmedForce.ImageSource" alt="Card image" style="height:25px;width:25px;object-fit: cover;overflow: hidden;opacity:0.3"></div>
                    <div class="pl-3"><h5>@Model.ArmedForce.Name</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.BranchType != null)
    {
        <div class="mr-3">
            <a asp-controller="BranchType" asp-action="Details" asp-route-id="@Model.BranchTypeId" class="text-dark">
                <div class="d-flex alert bg-warning">
                    <div><img src="~/images/icons/raf-dark.png" style="height:25px;width:25px" /></div>
                    <div class="pl-3"><h5>@Model.BranchType.Type</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.Flags.Count > 0)
    {
        <div class="mr-3">
            <a asp-action="FlagsList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex alert bg-success">
                    <div><img src="~/images/icons/flag-dark.png" style="height:24px;width:24px" /></div>
                    <div class="pl-3"><h5>Flags</h5></div>
                    <div class="pl-3"><h5>@Model.Flags.Count</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.ShipServices.Count > 0)
    {
        <div class="mr-3">
            <a asp-action="ShipServicesList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex alert bg-info">
                    <div><img src="~/images/icons/shipservice-dark.png" style="height:24px;width:24px" /></div>
                    <div class="pl-3"><h5>Ships</h5></div>
                    <div class="pl-3"><h5>@Model.ShipServices.Count</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
<div class="card-deck">
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Details</h5></div>
                <div class="ml-auto"><h5><i class="fas fa-info-circle"></i></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Id), Value = Model.Id }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Name), Value = Model.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.ArmedForceId), Value = Model.ArmedForce.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.BranchTypeId), Value = Model.BranchType.Type }' />
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Flags</h5></div>
                <div class="ml-auto">
                    <h5><a asp-controller="BranchFlag" asp-action="CreateByBranch" asp-route-id="@Model.Id" style="color:white" title="Add Flag"><i class="fas fa-plus"></i></a></h5>
                </div>
            </div>
        </div>
        <div class="card-body bg-transparent">
            @if (Model.Flags.Count > 0)
            {
                foreach (var item in Model.Flags.OrderBy(x => x.Name))
                {
                    <partial name="ActionListFlag" model='new { Controller = "Flag", Action = "Details", Value = item.Name, RouteId = item.Id, Image = item.ImageSource }' />
                }
            }
            else
            {
                <partial name="BasicListLabel" model='new { Value = "--", Icon = string.Empty }' />
            }
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Ships</h5></div>
                <div class="ml-auto">
                    <h5><a asp-controller="ShipService" asp-action="CreateByBranch" asp-route-id="@Model.Id" style="color:white" title="Add Ship"><i class="fas fa-plus"></i></a></h5>
                </div>
            </div>
        </div>
        <div class="card-body bg-transparent" style="height:335px;max-height:335px;overflow-y:auto;">
            @if (Model.ShipServices.Count > 0)
            {
                foreach (var item in Model.ShipServices.OrderBy(x => x.Name))
                {
                    <partial name="ActionListLabel" model='new { Controller = "ShipService", Action = "Details", Value = item.Name, RouteId = item.Id, Icon = "/images/icons/shipservice-dark.png" }' />
                }
            }
            else
            {
                <partial name="BasicListLabel" model='new { Value = "--", Icon = string.Empty }' />
            }
        </div>
    </div>
</div>