@model MvcFactbook.ViewModels.Models.Main.BranchView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />

<div class="d-flex bg-dark mt-3">
    @if (Model.ArmedForce != null)
    {
        <div class="mr-3">
            <a asp-controller="ArmedForce" asp-action="Details" asp-route-id="@Model.ArmedForceId" class="text-dark">
                <div class="d-flex alert bg-primary">
                    <div><i class="fas fa-map-marker-alt" style="font-size:26px"></i></div>
                    <div class="pl-3"><h5>@Model.ArmedForce.Name</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }

    @if (Model.BranchType != null)
    {
        <div class="mr-3">
            <a asp-controller="BranchType" asp-action="Details" asp-route-id="@Model.BranchTypeId" class="text-dark">
                <div class="d-flex alert bg-warning">
                    <div><i class="fas fa-map-marker-alt" style="font-size:26px"></i></div>
                    <div class="pl-3"><h5>@Model.BranchType.Type</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<div class="card-deck">
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Details</h5></div>
                <div class="ml-auto"><h5><i class="fas fa-info-circle"></i></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.LabelFor(x => x.Id), Value = Model.Id }' />
            <partial name="BasicLabel" model='new { Label = Html.LabelFor(x => x.Name), Value = Model.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.LabelFor(x => x.ArmedForceId), Value = Model.ArmedForce.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.LabelFor(x => x.BranchTypeId), Value = Model.BranchType.Type }' />
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Flags</h5></div>
                <div class="ml-auto">
                    <h5><a asp-controller="ArmedForceFlag" asp-action="CreateByArmedForce" asp-route-id="@Model.Id" style="color:white" title="Add Flag"><i class="fas fa-plus"></i></a></h5>
                </div>
            </div>
        </div>
        <div class="card-body bg-transparent">
            
        </div>
    </div>
</div>