
@model MvcFactbook.ViewModels.Models.Main.BranchView

@{
    ViewData["Title"] = "Details";
}

<partial name="DetailsMain" />

<div class="w-100 p-2">
    <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/ship-light.png",
                Label = "TOTAL FLEET"
    }' />
    <div class="d-flex flex-row flex-wrap mt-3">
        <div style="width:20%">
            <div class="text-muted"><h6>Ships</h6></div>
            <div class="text-white"><h4>@Model.TotalFleet.ServicesList.Count()</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Tonnage</h6></div>
            <div class="text-white"><h4>@Model.TotalFleet.FleetServicesTotal.TonnageLabel</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Average Displacement</h6></div>
            <div class="text-white"><h4>@Model.TotalFleet.FleetServicesTotal.DisplacementAverageLabel</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Average Length</h6></div>
            <div class="text-white"><h4>@Model.TotalFleet.FleetServicesTotal.LengthAverageLabel</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Average Beam</h6></div>
            <div class="text-white"><h4>@Model.TotalFleet.FleetServicesTotal.BeamAverageLabel</h4></div>
        </div>
    </div>
</div>

<div class="d-flex flex-row flex-wrap">
    <div style="width:20%">
        <div class="text-muted"><h6>Active Ships</h6></div>
        <div class="text-white"><h4>@Model.ActiveFleet.ServicesList.Count()</h4></div>
    </div>
    <div style="width:20%">
        <div class="text-muted"><h6>Active Tonnage</h6></div>
        <div class="text-white"><h4>@Model.ActiveFleet.FleetServicesTotal.TonnageLabel</h4></div>
    </div>
    <div style="width:20%">
        <div class="text-muted"><h6>Active Tonnage</h6></div>
        <div class="text-white"><h4>@Model.ActiveFleet.FleetServicesTotal.DisplacementAverageLabel</h4></div>
    </div>
    <div style="width:20%">
        <div class="text-muted"><h6>Active Tonnage</h6></div>
        <div class="text-white"><h4>@Model.ActiveFleet.FleetServicesTotal.LengthAverageLabel</h4></div>
    </div>
    <div style="width:20%">
        <div class="text-muted"><h6>Active Tonnage</h6></div>
        <div class="text-white"><h4>@Model.ActiveFleet.FleetServicesTotal.BeamAverageLabel</h4></div>
    </div>
    <div style="width:20%">
        <div class="text-muted"><h6>Active Ships</h6></div>
        <div class="text-white"><h4>@Model.InactiveFleet.ServicesList.Count()</h4></div>
    </div>
    <div style="width:20%">
        <div class="text-muted"><h6>Active Tonnage</h6></div>
        <div class="text-white"><h4>@Model.InactiveFleet.FleetServicesTotal.TonnageLabel</h4></div>
    </div>
    <div style="width:20%">
        <div class="text-muted"><h6>Active Tonnage</h6></div>
        <div class="text-white"><h4>@Model.InactiveFleet.FleetServicesTotal.DisplacementAverageLabel</h4></div>
    </div>
    <div style="width:20%">
        <div class="text-muted"><h6>Active Tonnage</h6></div>
        <div class="text-white"><h4>@Model.InactiveFleet.FleetServicesTotal.LengthAverageLabel</h4></div>
    </div>
    <div style="width:20%">
        <div class="text-muted"><h6>Active Tonnage</h6></div>
        <div class="text-white"><h4>@Model.InactiveFleet.FleetServicesTotal.BeamAverageLabel</h4></div>
    </div>
</div>
<div class="w-100 p-2">
    <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/ship-light.png",
                Label = "SHIPS"
    }' />
    <div class="mt-3" style="max-height:300px;overflow-y:auto;">
        <partial name="ListShipServices" model=@Model.ActiveFleet.FleetServicesTotal.ServicesList />
    </div>
</div>

<div class="w-100 p-2">
    <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/ship-light.png",
                Label = "SHIPS"
            }' />
    <div class="mt-3" style="max-height:300px;overflow-y:auto;">
        <div class="d-flex flex-column">
            @foreach (var item in Model.TotalFleet.ServicesList)
            {
                <div class="w-100 mb-2">
                    <a asp-controller="ShipService" asp-action="Details" asp-route-id="@item.Id">
                        <div class="d-flex flex-row">
                            <div class="mr-2">
                                <img class="rounded" src="@item.ImageSource" alt="Card image" style="height:20px;width:20px;object-fit: cover;overflow: hidden;opacity:0.4" />
                            </div>
                            <div class="mr-2">
                                <div class="text-white">@item.Name</div>
                            </div>
                            <div class="mr-2">
                                <img src="~/images/icons/chevron-right-light.png" style="height:20px;width:20px" />
                            </div>
                            <div class="mr-2">
                                <div class="text-muted">@item.ShipSubType.Type</div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>