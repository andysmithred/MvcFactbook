@model MvcFactbook.ViewModels.Models.Main.BranchView

@{
    ViewData["Title"] = "Details";
}

<partial name="DetailsMain" />

<div class="w-100 p-2">
    <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/ship-light.png",
                Label = "INACTIVE FLEET"
    }' />
    <div class="d-flex flex-row flex-wrap mt-3">
        <div style="width:20%">
            <div class="text-muted"><h6>Ships</h6></div>
            <div class="text-white"><h4>@Model.InactiveFleet.ServicesList.Count()</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Tonnage</h6></div>
            <div class="text-white"><h4>@Model.InactiveFleet.FleetServicesTotal.TonnageLabel</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Average Displacement</h6></div>
            <div class="text-white"><h4>@Model.InactiveFleet.FleetServicesTotal.DisplacementAverageLabel</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Average Length</h6></div>
            <div class="text-white"><h4>@Model.InactiveFleet.FleetServicesTotal.LengthAverageLabel</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Average Beam</h6></div>
            <div class="text-white"><h4>@Model.InactiveFleet.FleetServicesTotal.BeamAverageLabel</h4></div>
        </div>
    </div>
</div>

<hr class="bg-light" />


<div class="d-flex flex-row">
    <div class="w-100 p-2">
        <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/ship-light.png",
                Label = "SHIPS"
            }' />
        <div class="mt-3" style="max-height:300px;overflow-y:auto;">
            <partial name="ListShipServices" model=@Model.InactiveFleet.ServicesList />
        </div>
    </div>
    <div class="w-100 p-2">
        <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/shipcategory-light.png",
                Label = "BY SHIP CATEGORY"
            }' />
        <div class="d-flex flex-row flex-wrap mt-3">
            @foreach (var item in Model.InactiveFleet.FleetServicesByShipCategory)
            {
                <div style="width:33%">
                    <div class="text-muted"><h6>@item.Name</h6></div>
                    <div class="text-white"><h4>@item.ServicesList.Count()</h4></div>
                </div>
            }
        </div>
    </div>
</div>

<hr class="bg-light" />
