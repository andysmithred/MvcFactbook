                        <div class="mr-2">
                            <img src="~/images/icons/shiptype-light.png" style="height:20px;opacity:0.4" />
                        </div>
                        <div class="mr-2 w-50">
                            <div class="text-white">@item.Name</div>
                        </div>
                        <div class="mr-2">
                            <img src="~/images/icons/chevron-right-light.png" style="height:20px;width:20px" />
                        </div>
                        <div class="mr-2">
                            <div class="text-muted">@item.ServicesList.Count()</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="w-100 p-2">
        <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/shipsubtype-light.png",
                Label = "BY SHIP SUB-TYPE"
            }' />
        <div class="mt-3" style="max-height:300px;overflow-y:auto;">
            @foreach (var item in Model.TotalFleet.FleetServicesByShipSubType)
            {
                <div class="w-100 mb-2">
                    <div class="d-flex flex-row">
                        <div class="mr-2">
                            <img src="~/images/icons/shipsubtype-light.png" style="height:20px;opacity:0.4" />
                        </div>
                        <div class="mr-2">
                            <div class="text-white">@item.Name</div>
                        </div>
                        <div class="mr-2">
                            <img src="~/images/icons/chevron-right-light.png" style="height:20px;width:20px" />
                        </div>
                        <div class="mr-2">
                            <div class="text-muted">@item.ServicesList.Count()</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="w-100 p-2">
        <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/shipclass-light.png",
                Label = "BY SHIP CLASS"
            }' />
        <div class="mt-3" style="max-height:300px;overflow-y:auto;">
            @foreach (var item in Model.TotalFleet.FleetServicesByShipClass)
            {
                <div class="w-100 mb-2">
                    <div class="d-flex flex-row">
                        <div class="mr-2">
                            <img src="~/images/icons/shipclass-light.png" style="height:20px;opacity:0.4" />
