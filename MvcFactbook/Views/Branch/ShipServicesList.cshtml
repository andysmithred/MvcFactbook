@model MvcFactbook.ViewModels.Models.Main.BranchView

@{
    ViewData["Title"] = "Details";
}

<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />
<hr class="bg-secondary" />
<div class="d-flex mt-3 p-2">
    @if (Model.ArmedForce != null)
    {
        <div class="mr-4">
            <a asp-controller="ArmedForce" asp-action="Details" asp-route-id="@Model.ArmedForceId">
                <div class="d-flex">
                    <div><img class="rounded" src="@Model.ArmedForce.ImageSource" alt="Card image" style="height:25px;width:25px;object-fit: cover;overflow: hidden;opacity:0.3"></div>
                    <div class="pl-2 text-white">@Model.ArmedForce.Name</div>
                    <div class="ml-auto pl-2">
                        <h5><i class='fas fa-angle-right text-white'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.BranchType != null)
    {
        <div class="mr-4">
            <a asp-controller="BranchType" asp-action="Details" asp-route-id="@Model.BranchTypeId">
                <div class="d-flex">
                    <div><img src="~/images/icons/@Model.BranchType.IconLight" style="height:20px;width:20px" /></div>
                    <div class="pl-2 text-white">@Model.BranchType.Type</div>
                    <div class="ml-auto pl-2">
                        <h5><i class='fas fa-angle-right text-white'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.Flags.Count > 0)
    {
        <div class="mr-4">
            <a asp-action="FlagsList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex">
                    <div><img src="~/images/icons/flag-light.png" style="height:20px;width:20px" /></div>
                    <div class="pl-2 text-white">Flags</div>
                    <div class="pl-2 text-white">@Model.Flags.Count</div>
                    <div class="ml-auto pl-2">
                        <h5><i class='fas fa-angle-right text-white'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.ShipServices.Count > 0)
    {
        <div class="mr-4">
            <a asp-action="ShipServicesList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex">
                    <div><img src="~/images/icons/shipservice-light.png" style="height:20px;width:20px" /></div>
                    <div class="pl-2 text-white">Ships</div>
                    <div class="pl-2 text-white">@Model.ShipServices.Count</div>
                    <div class="ml-auto pl-2">
                        <h5><i class='fas fa-angle-right text-white'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
<hr class="bg-secondary" />
<div class="text-muted p-2"><h4>Ships</h4></div>
<div class=" p-2 w-100">
    <partial name="PartialListDetailsShipServices" model="@Model.ShipServices.OrderBy(x => x.Name)" />
</div>
<hr class="bg-secondary" />
