@model MvcFactbook.Models.BranchFlag

@{
    ViewData["Title"] = "Create";
}

<partial name='CreateByMenu' model='new { Text = "Flag", Action = "Details", Controller = "Flag", RouteId = ViewBag.RouteId, Icon = "fas fa-plus-square" }' />
<hr class="bg-light" />

<div class="pl-2 pr-2">
    <div class="d-flex flex-row w-100">
        <div class="pr-2">
            <img src="~/images/icons/emptyflag-light.png" style="height:40px;" />
        </div>
        <div class="text-white">
            <h2>Branch Flag</h2>
        </div>
    </div>
    <hr class="bg-secondary" />
    <form asp-action="CreateByFlag">
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Branch" class="input-group-text w-100"></label>
            </div>
            <select asp-for="BranchId" asp-items="ViewBag.Branches" class="form-control rounded-right"></select>
            <span asp-validation-for="BranchId" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Flag" class="input-group-text w-100"></label>
            </div>
            <select asp-for="FlagId" asp-items="ViewBag.Flags" class="form-control rounded-right"></select>
            <span asp-validation-for="FlagId" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Start" class="input-group-text w-100"></label>
            </div>
            <input asp-for="Start" class="form-control rounded-right" />
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="End" class="input-group-text w-100"></label>
            </div>
            <input asp-for="End" class="form-control rounded-right" />
            <span asp-validation-for="End" class="text-danger"></span>
        </div>
        <hr class="bg-secondary" />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-outline-secondary btn-sm" />
        </div>
    </form>
</div>
<hr class="bg-light" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
