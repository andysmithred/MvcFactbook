@model MvcFactbook.ViewModels.Models.Main.BranchFlagView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />

<div class="d-flex bg-dark mt-3">
    @if (Model.Branch != null)
    {
        <div class="mr-3">
            <a asp-controller="Branch" asp-action="Details" asp-route-id="@Model.BranchId" class="text-dark">
                <div class="d-flex alert bg-warning">
                    <div><img src="~/images/icons/branch-dark.png" style="height:25px;width:25px" /></div>
                    <div class="pl-3"><h5>@Model.Branch.Name</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.Flag != null)
    {
        <div class="mr-3">
            <a asp-controller="Flag" asp-action="Details" asp-route-id="@Model.FlagId" class="text-dark">
                <div class="d-flex alert bg-success">
                    <div><img class="rounded" src="@Model.Flag.ImageSource" alt="Card image" style="height:25px;width:25px;object-fit: cover;overflow: hidden;opacity:0.3"></div>
                    <div class="pl-3"><h5>@Model.Flag.Name</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
<div class="card-deck">
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Details</h5></div>
                <div class="ml-auto"><h5><i class="fas fa-info-circle"></i></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Id), Value = Model.Id }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Branch), Value = Model.Branch.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Flag), Value = Model.Flag.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Start), Value = Model.StartDateLabel }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.End), Value = Model.EndDateLabel }' />
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Branch</h5></div>
                <div class="ml-auto"><h5><img src="~/images/icons/branch-light.png" style="height:20px;width:20px" /></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Id), Value = Model.BranchId }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Branch.Name), Value = Model.Branch.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Branch.ArmedForce), Value = Model.Branch.ArmedForce.Name }' />
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Flag</h5></div>
                <div class="ml-auto"><h5><img src="~/images/icons/flag-light.png" style="height:20px;width:20px" /></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Id), Value = Model.FlagId }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Flag.Name), Value = Model.Flag.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Flag.Description), Value = Model.Flag.Description }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Flag.Code), Value = Model.Flag.Code }' />
        </div>
    </div>
</div>