@model MvcFactbook.ViewModels.Models.Main.BuilderView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />
<div class="d-flex bg-dark mt-3">
    @if (Model.Ships.Count > 0)
    {
        <div class="mr-3">
            <a asp-action="ShipsList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex alert bg-primary">
                    <div><img src="~/images/icons/ship-dark.png" style="height:24px;width:24px" /></div>
                    <div class="pl-3"><h5>Ships</h5></div>
                    <div class="pl-3"><h5>@Model.Ships.Count</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
<div class="card-deck w-75">
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Details</h5></div>
                <div class="ml-auto"><h5><i class="fas fa-info-circle"></i></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Id), Value = Model.Id }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Name), Value = Model.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Founded), Value = Model.Founded }' />
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Ships</h5></div>
                <div class="ml-auto">
                    <h5><a asp-controller="Ship" asp-action="CreateByBuilder" asp-route-id="@Model.Id" style="color:white" title="Add Ship"><i class="fas fa-plus"></i></a></h5>
                </div>
            </div>
        </div>
        <div class="card-body bg-transparent" style="height:250px;max-height:250px;overflow-y:auto;">
            @if (Model.Ships.Count > 0)
            {
                foreach (var item in Model.Ships.OrderBy(x => x.Name))
                {
                    <partial name="ActionListLabel" model='new { Controller = "Ship", Action = "Details", Value = item.Name, RouteId = item.Id, Icon = "/images/icons/ship-dark.png" }' />
                }
            }
            else
            {
                <partial name="BasicListLabel" model='new { Value = "--", Icon = string.Empty }' />
            }
        </div>
    </div>
</div>