@model MvcFactbook.ViewModels.Models.Main.BuilderView

@if (Model.HasFlag)
{
    <div class="pr-4">
        <img class="card-img-top-50 rounded" src="@Model.ImageSource" alt="Card image" style="height:50px;object-fit: cover;overflow: hidden;opacity:0.3" />
    </div>
}
<div class="text-white pr-2">
    <h2>@Model.Name</h2>
</div>
<div class="text-muted pl-2 pr-2">
    <h2>@Model.Founded</h2>
</div>
@if (Model.Defunct.HasValue)
{
    <div class="text-muted pl-2 pr-2">
        <h2>-</h2>
    </div>
    <div class="text-muted pl-2 pr-2">
        <h2>@Model.Defunct</h2>
    </div>
}
