@model MvcFactbook.Models.Flag

@{
    ViewData["Title"] = "Create";
}

<partial name="CreateMenu" model='new { Icon = "fas fa-plus-square" }' />
<hr class="bg-light" />

<div class="pl-2 pr-2">
    <div class="d-flex flex-row w-100">
        <div class="pr-2">
            <img src="~/images/icons/flag-light.png" style="height:40px;" />
        </div>
        <div class="text-white">
            <h2>Flag</h2>
        </div>
    </div>
    <hr class="bg-secondary" />
    <form asp-action="Create">
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Name" class="input-group-text w-100"></label>
            </div>
            <input asp-for="Name" class="form-control rounded-right" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Code" class="input-group-text w-100"></label>
            </div>
            <input asp-for="Code" class="form-control rounded-right" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Description" class="input-group-text w-100"></label>
            </div>
            <input asp-for="Description" class="form-control rounded-right" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="StartDate" class="input-group-text w-100"></label>
            </div>
            <input asp-for="StartDate" class="form-control rounded-right" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="EndDate" class="input-group-text w-100"></label>
            </div>
            <input asp-for="EndDate" class="form-control rounded-right" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Active" class="input-group-text w-100"></label>
            </div>
            <div class="input-group-prepend">
                <div class="input-group-text  rounded-right">
                    <input asp-for="Active" type="checkbox">
                </div>
            </div>
            <span asp-validation-for="Active" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Complete" class="input-group-text w-100"></label>
            </div>
            <div class="input-group-prepend">
                <div class="input-group-text  rounded-right">
                    <input asp-for="Complete" type="checkbox">
                </div>
            </div>
            <span asp-validation-for="Complete" class="text-danger"></span>
        </div>
        <hr class="bg-secondary" />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-outline-secondary btn-sm" />
        </div>
    </form>
</div>
<hr class="bg-light" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
