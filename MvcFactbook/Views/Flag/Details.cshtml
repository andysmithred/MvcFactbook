@model MvcFactbook.ViewModels.Models.Main.FlagView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />

<div class="d-flex bg-dark">
    @if (Model.ArmedForces.Count > 0)
    {
        <div class="mr-3">
            <a asp-action="ArmedForcesList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex alert bg-primary">
                    <div><i class="fas fa-map-marker-alt" style="font-size:24px"></i></div>
                    <div class="pl-3"><h5>Armed Forces</h5></div>
                    <div class="pl-3"><h5>@Model.ArmedForces.Count</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<div class="card-deck">
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Details</h5></div>
                <div class="ml-auto"><h5><i class="fas fa-info-circle"></i></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.LabelFor(x => x.Id), Value = Model.Id }' />
            <partial name="BasicLabel" model='new { Label = Html.LabelFor(x => x.Name), Value = Model.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.LabelFor(x => x.Code), Value = Model.Code }' />
            <partial name="BasicLabel" model='new { Label = Html.LabelFor(x => x.Description), Value = Model.Description }' />
            <partial name="BasicLabel" model='new { Label = Html.LabelFor(x => x.StartDate), Value = Model.StartDateLabel }' />
            <partial name="BasicLabel" model='new { Label = Html.LabelFor(x => x.EndDate), Value = Model.EndDateLabel }' />
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Armed Forces</h5></div>
                <div class="ml-auto">
                    <h5><a asp-controller="ArmedForceFlag" asp-action="CreateByFlag" asp-route-id="@Model.Id" style="color:white" title="Add Armed Force"><i class="fas fa-plus"></i></a></h5>
                </div>
            </div>
        </div>
        <div class="card-body bg-transparent">
            @if (Model.ArmedForces.Count > 0)
            {
                foreach (var item in Model.ArmedForces.OrderBy(x => x.Name))
                {
                    <partial name="ActionListLabel" model='new { Controller = "ArmedForce", Action = "Details", Value = item.Name, RouteId = item.Id, Icon = "fas fa-globe-asia" }' />
                }
            }
            else
            {
                <partial name="BasicListLabel" model='new { Value = "--", Icon = string.Empty }' />
            }
        </div>
    </div>
</div>