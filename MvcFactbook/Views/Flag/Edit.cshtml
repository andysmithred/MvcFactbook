@model MvcFactbook.Models.Flag

@{
    ViewData["Title"] = "Edit";
}

<br />
<partial name="EditMenu" model='new { RouteId = Model.Id, Icon = "fas fa-edit" }' />
<br />

<div class="card border-0 w-75">
    <div class="card-header bg-secondary text-white">
        <div class="d-flex">
            <div><h5>Flag</h5></div>
            <div class="ml-auto"><h5><img src="~/images/icons/flag.png" style="height:20px;width:20px" /></h5></div>
        </div>
    </div>
    <div class="card-body bg-transparent text-dark">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="input-group mb-3">
                <div class="input-group-prepend w-25">
                    <label asp-for="Name" class="input-group-text w-100"></label>
                </div>
                <input asp-for="Name" class="form-control rounded-right" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend w-25">
                    <label asp-for="Code" class="input-group-text w-100"></label>
                </div>
                <input asp-for="Code" class="form-control rounded-right" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend w-25">
                    <label asp-for="Description" class="input-group-text w-100"></label>
                </div>
                <input asp-for="Description" class="form-control rounded-right" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend w-25">
                    <label asp-for="StartDate" class="input-group-text w-100"></label>
                </div>
                <input asp-for="StartDate" class="form-control rounded-right" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend w-25">
                    <label asp-for="EndDate" class="input-group-text w-100"></label>
                </div>
                <input asp-for="EndDate" class="form-control rounded-right" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend w-25">
                    <label asp-for="Active" class="input-group-text w-100"></label>
                </div>
                <div class="input-group-prepend">
                    <div class="input-group-text rounded-right">
                        <input asp-for="Active" type="checkbox">
                    </div>
                </div>
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
