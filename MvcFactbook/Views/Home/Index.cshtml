                }
                else
                {
                    <img src="~/images/icons/unlock-light.png" style="height:20px;" />
                }
            </div>
        </a>
        <div class="d-flex flex-column ml-2">
            <div class="text-muted">Sub-class</div>
            <div class="text-white"><h5>@Model.FeaturedShipClass.SubClassNameLabel</h5></div>
        </div>
        <div class="d-flex flex-column ml-2">
            <div class="text-muted">Year</div>
