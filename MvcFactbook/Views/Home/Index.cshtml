            <div class="text-white"><h5>@Model.FeaturedShipService.StartServiceLabel</h5></div>
        </div>
        <div class="d-flex flex-column ml-2">
            <div class="text-muted">End</div>
            <div class="text-white"><h5>@Model.FeaturedShipService.EndServiceLabel</h5></div>
        </div>
        <div class="d-flex flex-column ml-2">
            <div class="text-muted">Time Span</div>
            <div class="text-white"><h5>@Model.FeaturedShipService.TimeSpanLabel</h5></div>
        </div>
        <div class="d-flex flex-column ml-2">
            <div class="text-muted">Fate</div>
            <div class="text-white"><h5>@Model.FeaturedShipService.Fate</h5></div>
        </div>
    </div>
    <div class="w-25 p-1">
        <partial name="DetailsItemHeader" model='new { Label = "FEATURED CLASS", Icon = "/images/icons/shipclass-light.png" }' />
        <a asp-controller="ShipClass" asp-action="Details" asp-route-id="@Model.FeaturedShipClass.Id" class="w-100 home-link">
            <div class="mr-3">
                <img src="~/images/icons/shipclass-light.png" style="height:20px;" />
            </div>
            <div class="text-white"><h5>@Model.FeaturedShipClass.Name</h5></div>
            <div class="ml-auto">
                @if (Model.FeaturedShipClass.Complete)
                {
