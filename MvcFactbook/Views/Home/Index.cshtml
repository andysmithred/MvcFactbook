            <partial name="ListShips" model=@Model.ShipsList.OrderBy(x => x.Launched) />
        </div>
    </div>
    <div class="w-25 p-1">
        <partial name="DetailsItemHeader" model='new { Label = "COMMISSIONED ON THIS DAY", Icon = "/images/icons/shipservice-light.png" }' />
        <div class="mt-3" style="max-height:300px;overflow-y:auto;">
