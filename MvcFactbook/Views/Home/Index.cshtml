        <a asp-controller="Ship" asp-action="Details" asp-route-id="@Model.FeaturedShip.Id" class="w-100 home-link">
            @if (Model.FeaturedShip.HasFlag)
            {
                <div class="mr-3">
                    <img class="card-img-top-50 rounded" src="@Model.FeaturedShip.Flag.ImageSource" alt="Card image" style="height:20px;width:30px;object-fit: cover;overflow: hidden;opacity:0.3" />
                </div>
            }
            <div class="text-white"><h5>@Model.FeaturedShip.Name</h5></div>
            <div class="ml-auto">
                @if (Model.FeaturedShip.Complete)
                {
                    <img src="~/images/icons/lock-light.png" style="height:20px;" />
                }
                else
                {
                    <img src="~/images/icons/unlock-light.png" style="height:20px;" />
                }
            </div>
