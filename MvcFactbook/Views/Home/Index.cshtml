                Value = @Model.Branches.Total,
                Controller = "Branch",
                Action = "Index",
    }' />
    <partial name="HomeItemCount" model='new {
                Icon = "/images/icons/builder-light.png",
                Label = "BUILDERS",
                Value = @Model.Builders.Total,
                Controller = "Builder",
                Action = "Index",
    }' />
    <partial name="HomeItemCount" model='new {
                Icon = "/images/icons/flag-light.png",
                Label = "FLAGS",
                Value = @Model.Flags.Total,
                Controller = "Flag",
                Action = "Index",
    }' />
    <partial name="HomeItemCount" model='new {
                Icon = "/images/icons/embassy-light.png",
                Label = "POLITICAL ENTITIES",
                Value = @Model.PoliticalEntities.Total,
                Controller = "PoliticalEntity",
