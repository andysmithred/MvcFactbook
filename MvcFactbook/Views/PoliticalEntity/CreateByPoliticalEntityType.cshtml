@model MvcFactbook.Models.PoliticalEntity

@{
    ViewData["Title"] = "Create";
}

<partial name='CreateByMenu' model='new { Text = "Political Entity Type", Action = "Details", Controller = "PoliticalEntityType", RouteId = ViewBag.RouteId, Icon = "fas fa-plus-square" }' />
<hr class="bg-light" />

<div class="pl-2 pr-2">
    <div class="d-flex flex-row w-100">
        <div class="pr-2">
            <img src="~/images/icons/embassy-light.png" style="height:40px;" />
        </div>
        <div class="text-white">
            <h2>Political Entity</h2>
        </div>
    </div>
    <hr class="bg-secondary" />
    <form asp-action="CreateByPoliticalEntityType">
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="ShortName" class="input-group-text w-100"></label>
            </div>
            <input asp-for="ShortName" class="form-control rounded-right" />
            <span asp-validation-for="ShortName" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Name" class="input-group-text w-100"></label>
            </div>
            <input asp-for="Name" class="form-control rounded-right" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="FullName" class="input-group-text w-100"></label>
            </div>
            <input asp-for="FullName" class="form-control rounded-right" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Code" class="input-group-text w-100"></label>
            </div>
            <input asp-for="Code" class="form-control rounded-right" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="StartDate" class="input-group-text w-100"></label>
            </div>
            <input asp-for="StartDate" class="form-control rounded-right" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="EndDate" class="input-group-text w-100"></label>
            </div>
            <input asp-for="EndDate" class="form-control rounded-right" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Exists" class="input-group-text w-100"></label>
            </div>
            <div class="input-group-prepend">
                <div class="input-group-text  rounded-right">
                    <input asp-for="Exists" type="checkbox">
                </div>
            </div>
            <span asp-validation-for="Exists" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="HasEmblem" class="input-group-text w-100"></label>
            </div>
            <div class="input-group-prepend">
                <div class="input-group-text  rounded-right">
                    <input asp-for="HasEmblem" type="checkbox">
                </div>
            </div>
            <span asp-validation-for="HasEmblem" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="PoliticalEntityType" class="input-group-text w-100"></label>
            </div>
            <select asp-for="PoliticalEntityTypeId" asp-items="ViewBag.PoliticalEntityTypes" class="form-control rounded-right"></select>
            <span asp-validation-for="PoliticalEntityTypeId" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Complete" class="input-group-text w-100"></label>
            </div>
            <div class="input-group-prepend">
                <div class="input-group-text  rounded-right">
                    <input asp-for="Complete" type="checkbox">
                </div>
            </div>
            <span asp-validation-for="Complete" class="text-danger"></span>
        </div>
        <hr class="bg-secondary" />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-outline-secondary btn-sm" />
        </div>
    </form>
</div>
<hr class="bg-light" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
