@model MvcFactbook.ViewModels.Models.Main.PoliticalEntityView

@if (Model.HasFlag)
{
    <div class="pr-2">
        <img class="card-img-top-50 rounded" src="@Model.ImageSource" alt="Card image" style="height:50px;object-fit: cover;overflow: hidden;opacity:0.3" />
    </div>
}
<div class="ml-2 text-white">
    <h2>@Model.Name</h2>
</div>
<div class="ml-auto pt-2">
    @if (Model.Complete)
    {
        <img src="~/images/icons/lock-light.png" style="height:30px;" />
    }
    else
    {
        <img src="~/images/icons/unlock-light.png" style="height:30px;" />
    }
</div>
