@model MvcFactbook.Models.PoliticalEntityEra

@{
    ViewData["Title"] = "Edit";
}

<partial name="EditMenu" model='new { RouteId = Model.Id, Icon = "fas fa-edit" }' />
<hr class="bg-light" />

<div class="pl-2 pr-2">
    <div class="d-flex flex-row w-100">
        <div class="pr-2">
            <img src="~/images/icons/time-light.png" style="height:40px;" />
        </div>
        <div class="text-white">
            <h2>Political Entity Era</h2>
        </div>
    </div>
    <hr class="bg-secondary" />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="PoliticalEntity" class="input-group-text w-100"></label>
            </div>
            <select asp-for="PoliticalEntityId" asp-items="ViewBag.PoliticalEntities" class="form-control rounded-right"></select>
            <span asp-validation-for="PoliticalEntityId" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="StartDate" class="input-group-text w-100"></label>
            </div>
            <input asp-for="StartDate" class="form-control rounded-right" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="EndDate" class="input-group-text w-100"></label>
            </div>
            <input asp-for="EndDate" class="form-control rounded-right" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Description" class="input-group-text w-100"></label>
            </div>
            <input asp-for="Description" class="form-control rounded-right" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <hr class="bg-secondary" />
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-outline-secondary btn-sm" />
        </div>
    </form>
</div>
<hr class="bg-light" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
