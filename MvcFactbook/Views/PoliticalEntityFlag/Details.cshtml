@model MvcFactbook.ViewModels.Models.Main.PoliticalEntityFlagView

@{
    ViewData["Title"] = "Details";
}

<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />

<div class="d-flex mt-3 p-2">
    @if (Model.PoliticalEntity != null)
    {
        <div class="mr-5">
            <a asp-controller="PoliticalEntity" asp-action="Details" asp-route-id="@Model.PoliticalEntityId">
                <div class="d-flex">
                    <div><img src="~/images/icons/embassy-light.png" style="height:25px;width:25px" /></div>
                    <div class="pl-3 text-white">@Model.PoliticalEntity.ShortName</div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right text-white'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.Flag != null)
    {
        <div class="mr-5">
            <a asp-controller="Flag" asp-action="Details" asp-route-id="@Model.FlagId">
                <div class="d-flex">
                    <div><img class="rounded" src="@Model.Flag.ImageSource" alt="Card image" style="height:25px;width:25px;object-fit: cover;overflow: hidden;opacity:0.3"></div>
                    <div class="pl-3 text-white">@Model.Flag.Name</div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right text-white'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<div class="d-flex flex-row flex-wrap mt-2">

    <div class="flex-fill p-2 w-20">
        <div class="text-muted"><h6>@Html.DisplayNameFor(x => x.Id)</h6></div>
        <div class="text-white"><h2>@Model.Id</h2></div>
    </div>
    <div class="flex-fill p-2 w-20">
        <div class="text-muted"><h6>@Html.DisplayNameFor(x => x.PoliticalEntity)</h6></div>
        <div class="text-white"><h4>@Model.PoliticalEntity.ShortName</h4></div>
    </div>
    <div class="flex-fill p-2 w-20">
        <div class="text-muted"><h6>@Html.DisplayNameFor(x => x.Flag)</h6></div>
        <div class="text-white"><h4>@Model.Flag.Name</h4></div>
    </div>
    <div class="flex-fill p-2 w-20">
        <div class="text-muted"><h6>@Html.DisplayNameFor(x => x.StartDate)</h6></div>
        <div class="text-white"><h2>@Model.StartDateLabel</h2></div>
    </div>
    <div class="flex-fill p-2 w-20">
        <div class="text-muted"><h6>@Html.DisplayNameFor(x => x.EndDate)</h6></div>
        <div class="text-white"><h2>@Model.EndDateLabel</h2></div>
    </div>
</div>
