@model MvcFactbook.ViewModels.Models.Main.PoliticalEntityFlagView

<div>
    <div class="d-flex w-75">
        <div class="p-1">
            <img src="~/images/icons/embassy-light.png" style="height:40px;width:40px" />
        </div>
        <div class="text-white p-2 pl-3">
            <h2>@Model.PoliticalEntity.ShortName</h2>
        </div>
        <div class="p-2 pl-3 pr-3">
            <img src="~/images/icons/advance-light.png" style="height:40px;width:40px" />
        </div>
        <div class="p-1">
            <img class="card-img-top-50 rounded" src="@Model.Flag.ImageSource" alt="Card image" style="height:40px;object-fit: cover;overflow: hidden;opacity:0.3">
        </div>
        <div class="text-white p-2 pr-3">
            <h2>@Model.Flag.Name</h2>
        </div>
    </div>
</div>
