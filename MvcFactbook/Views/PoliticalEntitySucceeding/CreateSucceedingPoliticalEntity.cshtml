@model MvcFactbook.Models.PoliticalEntitySucceeding

@{
    ViewData["Title"] = "Create";
}

<partial name='CreateByMenu' model='new { Text = "Preceding Entity", Action = "Details", Controller = "PoliticalEntity", RouteId = ViewBag.RouteId, Icon = "fas fa-plus-square" }' />
<hr class="bg-light" />

<div class="pl-2 pr-2">
    <div class="d-flex flex-row w-100">
        <div class="pr-2">
            <img src="~/images/icons/succeedingclass-light.png" style="height:40px;" />
        </div>
        <div class="text-white">
            <h2>Succeeding Entity</h2>
        </div>
    </div>
    <hr class="bg-secondary" />
    <form asp-action="CreateSucceedingPoliticalEntity">
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="PrecedingPoliticalEntity" class="input-group-text w-100"></label>
            </div>
            <select asp-for="PoliticalEntityId" asp-items="ViewBag.PrecedingEntities" class="form-control rounded-right"></select>
            <span asp-validation-for="PoliticalEntityId" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="SucceedingPoliticalEntity" class="input-group-text w-100"></label>
            </div>
            <select asp-for="SucceedingPoliticalEntityId" asp-items="ViewBag.SucceedingEntities" class="form-control rounded-right"></select>
            <span asp-validation-for="SucceedingPoliticalEntityId" class="text-danger"></span>
        </div>
        <div class="input-group input-group-sm mb-3 w-50">
            <div class="input-group-prepend w-25">
                <label asp-for="Year" class="input-group-text w-100"></label>
            </div>
            <input asp-for="Year" class="form-control rounded-right" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <hr class="bg-secondary" />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-outline-secondary btn-sm" />
        </div>
    </form>
</div>
<hr class="bg-light" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
