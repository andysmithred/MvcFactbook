@model MvcFactbook.ViewModels.Models.Main.PoliticalEntityTypeView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />

<div class="d-flex bg-dark mt-3">
    
</div>
<div class="card-deck w-50">
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Details</h5></div>
                <div class="ml-auto"><h5><i class="fas fa-info-circle"></i></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Id), Value = Model.Id }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Type), Value = Model.Type }' />
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Branches</h5></div>
                <div class="ml-auto">
                    <h5><a asp-controller="PoliticalEntity" asp-action="CreateByPoliticalEntityType" asp-route-id="@Model.Id" style="color:white" title="Add Political Entity"><i class="fas fa-plus"></i></a></h5>
                </div>
            </div>
        </div>
        <div class="card-body bg-transparent" style="height:250px;max-height:250px;overflow-y:auto;">
            
        </div>
    </div>
</div>
