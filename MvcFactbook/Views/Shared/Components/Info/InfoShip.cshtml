@model MvcFactbook.ViewModels.Models.Main.ShipView

<div class="d-flex flex-row flex-wrap">
    <partial name="InfoItem" model='new { Label = Html.DisplayNameFor(x => x.Launched), Value = Model.LaunchedLabel }' />
    <partial name="InfoItem" model='new { Label = Html.DisplayNameFor(x => x.TimeSpan), Value = Model.TimeSpanLabel }' />
    @if (Model.HasDockyard)
    {
        <partial name="InfoItem" model='new { Label = Html.DisplayNameFor(x => x.Dockyard), Value = Model.Dockyard.Name }' />
    }
    @if (Model.HasShipbuilder)
    {
        <partial name="InfoItem" model='new { Label = Html.DisplayNameFor(x => x.Shipbuilder), Value = Model.Shipbuilder.Name }' />
    }
</div>
