<div class="d-flex flex-column">
    @foreach (var item in Model)
    {
        <div class="w-100 mb-2">
            <a asp-controller="PoliticalEntity" asp-action="Details" asp-route-id="@item.SucceedingEntity.Id">
                <div class="d-flex flex-row">
                    <div class="mr-2">
                        <img class="rounded" src="@item.SucceedingEntity.ImageSource" alt="Card image" style="height:20px;width:20px;object-fit: cover;overflow: hidden;opacity:0.4" />
                    </div>
                    <div class="mr-2">
                        <div class="text-white">@item.SucceedingEntity.Name</div>
                    </div>
                    <div class="mr-2">
                        <img src="~/images/icons/chevron-right-light.png" style="height:20px;width:20px" />
                    </div>
                    <div class="mr-2">
                        <div class="text-muted">@item.Year</div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
