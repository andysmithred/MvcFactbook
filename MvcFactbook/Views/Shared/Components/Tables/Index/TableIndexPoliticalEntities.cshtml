@model IEnumerable<MvcFactbook.ViewModels.Models.Main.PoliticalEntityView>

<div>
    @(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add().Encoded(false).RenderedAs(model => $"<img class='rounded' src=" + model.ImageSource + " alt='Card image' style='height: 20px; width: 20px; object-fit: cover; overflow: hidden; opacity: 0.4'>");
            columns.Add(model => model.ShortName).Titled("Short Name");
            columns.Add(model => model.Name).Titled("Name");
            columns.Add(model => model.FullName).Titled("Full Name");
            columns.Add(model => model.Code).Titled("Code");
            columns.Add(model => model.PoliticalEntityEras.Count()).Titled("Eras");
            columns.Add().Encoded(false).RenderedAs(model =>
                "<div class='btn-group float-right'>" +
                    $"<a class='btn btn-outline-secondary btn-sm' href='/PoliticalEntity/Edit/{model.Id}'> Edit </a>" +
                    $"<a class='btn btn-outline-secondary btn-sm' href='/PoliticalEntity/Details/{model.Id}'> Details </a>" +
                    $"<a class='btn btn-outline-secondary btn-sm' href='/PoliticalEntity/Delete/{model.Id}'> Delete </a>" +
                "</div>"
            );
        })
        .Empty("No data found")
        .Filterable()
        .Sortable()
        .Pageable(pager =>
        {
            pager.RowsPerPage = 14;
        })
        .AppendCss("table-hover")
    )
</div>
