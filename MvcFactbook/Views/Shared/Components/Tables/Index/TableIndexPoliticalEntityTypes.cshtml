@model IEnumerable<MvcFactbook.ViewModels.Models.Main.PoliticalEntityTypeView>

<div>
    @(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add().Encoded(false).RenderedAs(model => $"<img src='/images/icons/government-light.png' style='height: 20px; width: 20px' />");
        columns.Add(model => model.Type).Titled("Type");
        columns.Add().Encoded(false).RenderedAs(model =>
            "<div class='btn-group float-right'>" +
                $"<a class='btn btn-outline-secondary btn-sm' href='/PoliticalEntityType/Edit/{model.Id}'>Edit</a>" +
                $"<a class='btn btn-outline-secondary btn-sm' href='/PoliticalEntityType/Details/{model.Id}'>Details</a>" +
                $"<a class='btn btn-outline-secondary btn-sm' href='/PoliticalEntityType/Delete/{model.Id}'>Delete</a>" +
            "</div>"
        );
    })
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable(pager =>
    {
        pager.RowsPerPage = 14;
    })
    .AppendCss("table-hover")
    )
</div>
