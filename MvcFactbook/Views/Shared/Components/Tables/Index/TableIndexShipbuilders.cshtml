@model IEnumerable<MvcFactbook.ViewModels.Models.Main.ShipbuilderView>

<div>
    @(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add().Encoded(false).RenderedAs(model => $"<img src='/images/icons/builder-light.png' style='height: 20px; width: 20px' />");
            columns.Add(model => model.ShortName).Titled("Short Name");
            columns.Add(model => model.Name).Titled("Name");
            columns.Add(model => model.StartLabel).Titled("Start");
            columns.Add(model => model.EndLabel).Titled("End");
            columns.Add(model => model.Complete).Titled("Complete");
            columns.Add().Encoded(false).RenderedAs(model => $"<img src='/images/icons/{model.CompleteIcon}' style='height: 20px; width: 20px' />");
            columns.Add().Encoded(false).RenderedAs(model =>
                "<div class='btn-group float-right'>" +
                    $"<a class='btn btn-outline-secondary btn-sm' href='/Shipbuilder/Edit/{model.Id}'>Edit</a>" +
                    $"<a class='btn btn-outline-secondary btn-sm' href='/Shipbuilder/Details/{model.Id}'>Details</a>" +
                    $"<a class='btn btn-outline-secondary btn-sm' href='/Shipbuilder/Delete/{model.Id}'>Delete</a>" +
                "</div>"
            );
        })
        .Empty("No data found")
        .Filterable()
        .Sortable()
        .Pageable(pager =>
        {
            pager.RowsPerPage = 14;
        })
        .AppendCss("table-hover")
    )
</div>
