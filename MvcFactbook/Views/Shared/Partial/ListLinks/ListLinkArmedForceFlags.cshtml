<div class="p-2" style="max-height:400px;overflow-y:auto;">
    <div class="text-muted"><h6>Flags</h6></div>
    <div class="d-flex flex-column mt-2">
        @foreach (var item in Model)
        {
            <div class="pr-4 pl-2 w-100">
                <a asp-controller="Flag" asp-action="Details" asp-route-id="@item.FlagId">
                    <div class="d-flex flex-row">
                        <div class="pt-2 pr-2">
                            <img class="rounded" src="@item.Flag.ImageSource" alt="Card image" style="height:30px;width:30px;object-fit: cover;overflow: hidden;opacity:0.4" />
                        </div>
                        <div class="p-2 w-50">
                            <div class="text-white"><h5>@item.Flag.Name</h5></div>
                        </div>
                        <div class="p-2">
                            <div class="text-muted"><h5>@item.Flag.DateLabel</h5></div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
