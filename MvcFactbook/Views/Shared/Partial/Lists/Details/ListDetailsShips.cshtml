@model IEnumerable<MvcFactbook.ViewModels.Models.Main.ShipView>

<div class="w-100">
    @(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add().Encoded(false).RenderedAs(model => $"<img src='/images/icons/ship-light.png' style='height: 20px; width: 20px' />");
            columns.Add(model => model.Name).Titled("Name");
            columns.Add(model => model.Launched).Titled("Launched").Formatted("{0:d}");
            columns.Add(model => model.TimeSpanLabel).Titled("Years Ago");
            columns.Add(model => model.Builder.Name).Titled("Builder");
            columns.Add().Encoded(false).RenderedAs(model =>
                "<div class='btn-group float-right'>" +
                    $"<a class='btn btn-outline-secondary btn-sm' href='/Ship/Details/{model.Id}'>Details</a>" +
                "</div>"
            );
        })
        .Empty("No data found")
        .Filterable()
        .Sortable()
        .Pageable(pager =>
        {
            pager.RowsPerPage = 10;
        })
        .AppendCss("table-hover")
    )
</div>
