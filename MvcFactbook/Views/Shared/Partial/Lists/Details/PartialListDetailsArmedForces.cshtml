@model IEnumerable<MvcFactbook.ViewModels.Models.Main.ArmedForceView>

@(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add().Encoded(false).RenderedAs(model => $"<img src='/images/icons/star.png' style='height: 20px; width: 20px' />");
            columns.Add(model => model.Name).Titled("Name");
            columns.Add(model => model.Code).Titled("Code");
            columns.Add(model => model.IsActive).Titled("Active");
            //columns.Add(model => model.Budget.HasValue ? model.Budget.Value : "--").Titled("Budget");
            columns.Add().Encoded(false).RenderedAs(model =>
                "<div class='btn-group float-right'>" +
                    $"<a class='btn btn-outline-secondary btn-sm' href='/Flag/Details/{model.Id}'>Details</a>" +
                "</div>"
            );
        })
        .Empty("No data found")
        .Filterable()
        .Sortable()
        .Pageable()
        .AppendCss("table-hover")
)
