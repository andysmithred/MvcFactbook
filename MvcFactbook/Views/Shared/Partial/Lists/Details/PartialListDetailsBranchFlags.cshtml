@model IEnumerable<MvcFactbook.ViewModels.Models.Main.BranchFlagView>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Branch.Name).Titled("Branch");
        columns.Add(model => model.Flag.Name).Titled("Flag");
        columns.Add(model => model.Start).Titled("Start date").Formatted("{0:d}");
        columns.Add(model => model.End).Titled("End date").Formatted("{0:d}");
        columns.Add().Encoded(false).RenderedAs(model =>
            "<div class='btn-group float-right'>" +
                $"<a class='btn btn-secondary btn-sm rounded' href='/BranchFlag/Details/{model.Id}'>Details</a>" +
            "</div>"
        );
    })
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable()
    .AppendCss("table-dark table-striped table-hover rounded-bottom")
)