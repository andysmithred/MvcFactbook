@model IEnumerable<MvcFactbook.ViewModels.Models.Main.BranchView>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add().Encoded(false).RenderedAs(model => $"<img class='rounded' src='{model.CurrentFlag.ImageSource}' alt='Card image' style='height:20px;width:20px;object-fit:cover;overflow:hidden;opacity:0.4'>");
        columns.Add(model => model.Name).Titled("Name");
        columns.Add(model => model.ArmedForce.Name).Titled("Armed Force");
        columns.Add(model => model.BranchType.Type).Titled("Branch Type");
        columns.Add(model => model.HasEmblem).Titled("Emblem");
        columns.Add().Encoded(false).RenderedAs(model =>
            "<div class='btn-group float-right'>" +
                $"<a class='btn btn-secondary btn-sm rounded' href='/Branch/Details/{model.Id}'>Details</a>" +
            "</div>"
        );
        })
        .Empty("No data found")
        .Filterable()
        .Sortable()
        .Pageable()
        .AppendCss("table-dark table-striped table-hover rounded-bottom")
)