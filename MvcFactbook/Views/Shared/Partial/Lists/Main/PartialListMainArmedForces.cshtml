@model IEnumerable<MvcFactbook.ViewModels.Models.Main.ArmedForceView>

@(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add().Encoded(false).RenderedAs(model => $"<img class='rounded' src='{model.Flag.ImageSource}' alt='Card image' style='height:20px;width:20px;object-fit:cover;overflow:hidden;opacity:0.4'>");
            columns.Add(model => model.Name).Titled("Name");
            columns.Add(model => model.Code).Titled("Code");
            columns.Add(model => model.IsActive).Titled("Active");
            //columns.Add(model => model.Budget.HasValue ? model.Budget.Value : "--").Titled("Budget");
            columns.Add().Encoded(false).RenderedAs(model =>
                "<div class='btn-group float-right'>" +
                    $"<a class='text-white pl-2' href='/ArmedForce/Edit/{model.Id}'>Edit</a>" +
                    $"<a class='text-white pl-2' href='/ArmedForce/Details/{model.Id}'>Details</a>" +
                    $"<a class='text-white pl-2' href='/ArmedForce/Delete/{model.Id}'>Delete</a>" +
                "</div>"
            );
        })
        .Empty("No data found")
        .Filterable()
        .Sortable()
        .Pageable()
        .AppendCss("table-hover")
)