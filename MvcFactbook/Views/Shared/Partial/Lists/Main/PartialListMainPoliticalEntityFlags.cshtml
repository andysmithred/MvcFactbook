@model IEnumerable<MvcFactbook.ViewModels.Models.Main.PoliticalEntityFlagView>

    @(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add().Encoded(false).RenderedAs(model => $"<img src='/images/icons/emptyflag-light.png' style='height: 20px; width: 20px' />");
        columns.Add(model => model.PoliticalEntity.Name).Titled("Political Entity");
        columns.Add(model => model.Flag.Name).Titled("Flag");
        columns.Add(model => model.StartDate).Titled("Start date").Formatted("{0:d}");
        columns.Add(model => model.EndDate).Titled("End date").Formatted("{0:d}");
        columns.Add().Encoded(false).RenderedAs(model =>
            "<div class='btn-group float-right'>" +
                $"<a class='text-white pl-2' href='/PoliticalEntityFlag/Edit/{model.Id}'>Edit</a>" +
                $"<a class='text-white pl-2' href='/PoliticalEntityFlag/Details/{model.Id}'>Details</a>" +
                $"<a class='text-white pl-2' href='/PoliticalEntityFlag/Delete/{model.Id}'>Delete</a>" +
            "</div>"
        );
    })
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable()
    .AppendCss("table-hover")
    )
