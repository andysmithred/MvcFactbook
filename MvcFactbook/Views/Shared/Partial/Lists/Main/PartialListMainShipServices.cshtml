@model IEnumerable<MvcFactbook.ViewModels.Models.Main.ShipServiceView>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add().Encoded(false).RenderedAs(model => $"<img src='/images/icons/star.png' style='height: 20px; width: 20px' />");
        columns.Add(model => model.Penant).Titled("Penant");
        columns.Add(model => model.Name).Titled("Name");
        columns.Add(model => model.Ship.Name).Titled("Ship");
        columns.Add(model => model.ShipClass.Name).Titled("Class");
        columns.Add(model => model.Branch.Name).Titled("Branch");
        columns.Add(model => model.ShipSubType.Type).Titled("Type");
        columns.Add().Encoded(false).RenderedAs(model =>
            "<div class='btn-group float-right'>" +
                $"<a class='btn btn-secondary btn-sm' href='/ShipService/Details/{model.Id}'>Details</a>" +
            "</div>"
        );
    })
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable()
    .AppendCss("table-dark table-striped table-hover rounded-bottom")
)