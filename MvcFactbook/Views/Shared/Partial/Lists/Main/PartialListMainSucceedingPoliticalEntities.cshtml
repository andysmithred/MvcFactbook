@model IEnumerable<MvcFactbook.ViewModels.Models.Main.PoliticalEntitySucceedingView>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add().Encoded(false).RenderedAs(model => $"<img src='/images/icons/succeedingclass-light.png' style='height: 20px; width: 20px' />");
        columns.Add(model => model.PrecedingEntity.Name).Titled("Preceding");
        columns.Add(model => model.SucceedingEntity.Name).Titled("Succeeding");
        columns.Add().Encoded(false).RenderedAs(model =>
            "<div class='btn-group float-left'>" +
                $"<a class='text-white pl-2' href='/PoliticalEntitySucceeding/Edit/{model.Id}'>Edit</a>" +
                $"<a class='text-white pl-2' href='/PoliticalEntitySucceeding/Details/{model.Id}'>Details</a>" +
                $"<a class='text-white pl-2' href='/PoliticalEntitySucceeding/Delete/{model.Id}'>Delete</a>" +
            "</div>"
        );
    })
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable()
    .AppendCss("table-hover")
)
