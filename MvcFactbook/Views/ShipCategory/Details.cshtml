@model MvcFactbook.ViewModels.Models.Main.ShipCategoryView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />

<div class="d-flex bg-dark">
    @if (Model.ShipTypes.Count > 0)
    {
        <div class="mr-3">
            <a asp-action="FlagsList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex alert bg-info">
                    <div><img src="~/images/icons/shiptype-dark.png" style="height:24px;width:24px" /></div>
                    <div class="pl-3"><h5>Ship Types</h5></div>
                    <div class="pl-3"><h5>@Model.ShipTypes.Count</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<div class="card-deck w-75">
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Details</h5></div>
                <div class="ml-auto"><h5><i class="fas fa-info-circle"></i></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Id), Value = Model.Id }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Category), Value = Model.Category }' />
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Ship Types</h5></div>
                <div class="ml-auto">
                    <h5><a asp-controller="ShipType" asp-action="CreateByShipCategory" asp-route-id="@Model.Id" style="color:white" title="Add Ship Type"><i class="fas fa-plus"></i></a></h5>
                </div>
            </div>
        </div>
        <div class="card-body bg-transparent" style="height:250px;max-height:250px;overflow-y:auto;">
            @if (Model.ShipTypes.Count > 0)
            {
                foreach (var item in Model.ShipTypes.OrderBy(x => x.Type))
                {
                    <partial name="ActionListLabel" model='new { Controller = "ShipType", Action = "Details", Value = item.Type, RouteId = item.Id, Icon = "/images/icons/shiptype-dark.png" }' />
                }
            }
            else
            {
                <partial name="BasicListLabel" model='new { Value = "--", Icon = string.Empty }' />
            }
        </div>
    </div>
</div>