@model MvcFactbook.ViewModels.Models.Main.ShipGroupSetView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />

<div class="d-flex bg-dark mt-3">
    @if (Model.ShipService != null)
    {
        <div class="mr-3">
            <a asp-controller="ShipService" asp-action="Details" asp-route-id="@Model.ShipServiceId" class="text-dark">
                <div class="d-flex alert bg-warning">
                    <div><img class="rounded" src="@Model.ShipService.ImageSource" alt="Card image" style="height:25px;width:25px;object-fit: cover;overflow: hidden;opacity:0.3"></div>
                    <div class="pl-3"><h5>@Model.ShipService.Name</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.ShipGroup != null)
    {
        <div class="mr-3">
            <a asp-controller="ShipGroup" asp-action="Details" asp-route-id="@Model.ShipGroupId" class="text-dark">
                <div class="d-flex alert bg-success">
                    <div><img src="~/images/icons/shipgroup-dark.png" style="height:25px;width:25px" /></div>
                    <div class="pl-3"><h5>@Model.ShipGroup.Name</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
<div class="card-deck">
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Ship Service</h5></div>
                <div class="ml-auto"><h5><img src="~/images/icons/shipservice-light.png" style="height:20px;width:20px" /></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Id), Value = Model.ShipServiceId }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.ShipService.Name), Value = Model.ShipService.Name }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.ShipService.Branch), Value = Model.ShipService.Branch.Name }' />
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Ship Group</h5></div>
                <div class="ml-auto"><h5><img src="~/images/icons/shipgroup-light.png" style="height:20px;width:20px" /></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Id), Value = Model.ShipGroupId }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.ShipGroup.Name), Value = Model.ShipGroup.Name }' />
        </div>
    </div>
</div>
