@model MvcFactbook.ViewModels.Models.Main.ShipGroupSetView

<div class="card alert alert-dark rounded p-2 w-100">
    <div class="d-flex">
        <div class="p-2">
            <img class="card-img-top-50 rounded" src="@Model.ShipService.ImageSource" alt="Card image" style="height:50px;object-fit: cover;overflow: hidden;opacity:0.3">
        </div>
        <div class="p-2 pl-3">
            <h3><strong>@Model.ShipService.Name</strong></h3>
        </div>
        <div class="p-2 pr-3 ml-auto">
            <h3><strong>@Model.ShipGroup.Name</strong></h3>
        </div>
        <div class="p-1">
            <img src="~/images/icons/shipgroup-dark.png" style="height:40px;width:40px" />
        </div>
    </div>
</div>
