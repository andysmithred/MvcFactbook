@model MvcFactbook.ViewModels.Models.Main.ShipServiceView

<partial name="DetailsInfoMain" model='new { Partial = "InfoShipService", Item = @Model }' />

<div class="p-2">
    <partial name="DetailsItemHeader" model='new { Label = "SHIP", Icon = "/images/icons/ship-light.png" }' />
</div>
<div class="p-2">
    <partial name="InfoShipServiceShip" model=@Model />
</div>
<hr class="bg-light" />

<div class="d-flex flex-row flex-fill">
    <partial name="DetailsAddListShipGroups" model='new {
                Action="CreateByShipService" ,
                RouteId=Model.Id,
                Items=Model.ShipGroups.OrderBy(x => x.Name)
        }' />
   
</div>

<hr class="bg-light" />
