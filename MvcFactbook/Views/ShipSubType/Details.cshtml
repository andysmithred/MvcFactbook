@model MvcFactbook.ViewModels.Models.Main.ShipSubTypeView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />

<div class="d-flex bg-dark">
    @if (Model.ShipType != null)
    {
        <div class="mr-3">
            <a asp-controller="ShipType" asp-action="Details" asp-route-id="@Model.ShipTypeId" class="text-dark">
                <div class="d-flex alert bg-light">
                    <div><img src="~/images/icons/shiptype-dark.png" style="height:24px;width:24px" /></div>
                    <div class="pl-3"><h5>@Model.ShipType.Type</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }

    @if (Model.ShipServices.Count > 0)
    {
        <div class="mr-3">
            <a asp-action="ShipServicesList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex alert bg-warning">
                    <div><img src="~/images/icons/raf-dark.png" style="height:24px;width:24px" /></div>
                    <div class="pl-3"><h5>Ship Services</h5></div>
                    <div class="pl-3"><h5>@Model.ShipServices.Count</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<div class="card-deck w-75">
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Details</h5></div>
                <div class="ml-auto"><h5><i class="fas fa-info-circle"></i></h5></div>
            </div>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Id), Value = Model.Id }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.Type), Value = Model.Type }' />
            <partial name="BasicLabel" model='new { Label = Html.DisplayNameFor(x => x.ShipType), Value = Model.ShipType.Type }' />
        </div>
    </div>
    <div class="card border-0">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex">
                <div><h5>Ship Services</h5></div>
                <div class="ml-auto">
                    <h5><a asp-controller="ShipService" asp-action="CreateByShipSubType" asp-route-id="@Model.Id" style="color:white" title="Add Ship Service"><i class="fas fa-plus"></i></a></h5>
                </div>
            </div>
        </div>
        <div class="card-body bg-transparent" style="height:335px;max-height:335px;overflow-y:auto;">
            @if (Model.ShipServices.Count > 0)
            {
                foreach (var item in Model.ShipServices.OrderBy(x => x.Name))
                {
                    <partial name="ActionListLabel" model='new { Controller = "ShipService", Action = "Details", Value = item.Name, RouteId = item.Id, Icon = "/images/icons/raf-dark.png" }' />
                }
            }
            else
            {
                <partial name="BasicListLabel" model='new { Value = "--", Icon = string.Empty }' />
            }
        </div>
    </div>
</div>