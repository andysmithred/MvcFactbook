@model MvcFactbook.ViewModels.Models.Main.ShipSubTypeView

@{
    ViewData["Title"] = "Details";
}

<partial name="DetailsMain" />

<div class="w-100 p-2">
    <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/ship-light.png",
                Label = "TOTAL FLEET"
    }' />
    <div class="d-flex flex-row flex-wrap mt-3">
        <div style="width:20%">
            <div class="text-muted"><h6>Ships</h6></div>
            <div class="text-white"><h4>@Model.TotalFleet.ServicesList.Count()</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Tonnage</h6></div>
            <div class="text-white"><h4>@Model.TotalFleet.FleetServicesTotal.TonnageLabel</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Average Displacement</h6></div>
            <div class="text-white"><h4>@Model.TotalFleet.FleetServicesTotal.DisplacementAverageLabel</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Average Length</h6></div>
            <div class="text-white"><h4>@Model.TotalFleet.FleetServicesTotal.LengthAverageLabel</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Average Beam</h6></div>
            <div class="text-white"><h4>@Model.TotalFleet.FleetServicesTotal.BeamAverageLabel</h4></div>
        </div>
    </div>
</div>

<hr class="bg-light" />

<div class="d-flex flex-row">
    <div class="w-50 p-2">
        <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/branch-light.png",
                Label = "BY BRANCH"
            }' />
        <div class="d-flex flex-row">
            <partial name="ChartDonut" model='new { Id="ByBranchChart", Items=@Model.TotalFleet.FleetServicesByBranch }' />
            <div class="mt-3 w-100" style="max-height:300px;overflow-y:auto;">
                @foreach (var item in Model.TotalFleet.FleetServicesByBranch)
                {
                    <div class="w-100 mb-2">
                        <a asp-controller="ShipSubType"
                           asp-action="DetailsFleetItem"
                           asp-route-id="@Model.Id"
                           asp-route-fleetType="Total"
                           asp-route-fleetItemListType="ByBranch"
                           asp-route-fleetItemId="@item.Id">
                            <div class="d-flex flex-row">
                                <div class="mr-2">
                                    <img src="~/images/icons/branch-light.png" style="height:20px;opacity:0.4" />
                                </div>
                                <div class="mr-2">
                                    <div class="text-white">@item.Name</div>
                                </div>
                                <div class="mr-2">
                                    <img src="~/images/icons/chevron-right-light.png" style="height:20px;width:20px" />
                                </div>
                                <div class="mr-2">
                                    <div class="text-muted">@item.ServicesList.Count()</div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="w-50">
        <partial name="DetailsListShipServices" model='new {
                    Items=Model.ShipServices.OrderBy(x => x.Name)
        }' />
    </div>
</div>

<hr class="bg-light" />