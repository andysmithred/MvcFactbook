@model MvcFactbook.ViewModels.Models.Main.ShipSubTypeView

@{
    ViewData["Title"] = "Details";
}

<br />
<partial name="DetailsMenu" />
<br />
<partial name="DetailsHeader" />

<div class="d-flex bg-dark">
    @if (Model.ShipType != null)
    {
        <div class="mr-3">
            <a asp-controller="ShipType" asp-action="Details" asp-route-id="@Model.ShipTypeId" class="text-dark">
                <div class="d-flex alert bg-light">
                    <div><img src="~/images/icons/shiptype-dark.png" style="height:24px;width:24px" /></div>
                    <div class="pl-3"><h5>@Model.ShipType.Type</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.ShipServices.Count > 0)
    {
        <div class="mr-3">
            <a asp-action="ShipServicesList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex alert bg-info">
                    <div><img src="~/images/icons/shipservice-dark.png" style="height:24px;width:24px" /></div>
                    <div class="pl-3"><h5>Ship Services</h5></div>
                    <div class="pl-3"><h5>@Model.ShipServices.Count</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
    @if (Model.Branches.Count > 0)
    {
        <div class="mr-3">
            <a asp-action="BranchesList" asp-route-id="@Model.Id" class="text-dark">
                <div class="d-flex alert bg-warning">
                    <div><img src="~/images/icons/branch-dark.png" style="height:24px;width:24px" /></div>
                    <div class="pl-3"><h5>Branches</h5></div>
                    <div class="pl-3"><h5>@Model.Branches.Count</h5></div>
                    <div class="ml-auto pl-3">
                        <h5><i class='fas fa-angle-right'></i></h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<div class="card border-0">
    <div class="card-header bg-secondary text-white">Service</div>
    <div class="card-body bg-dark p-0">
        <partial name="PartialListDetailsShipServices" model="@Model.ShipServices" />
    </div>
</div>