@model MvcFactbook.ViewModels.Models.Main.ShipTypeView

@{
    ViewData["Title"] = "Details";
}

<partial name="DetailsMain" />

<div class="w-100 p-2">
    <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/ship-light.png",
                Label = @Model.Fleet.DisplayFleetItemLabel
    }' />
    <div class="d-flex flex-row flex-wrap mt-3">
        <div style="width:20%">
            <div class="text-muted"><h6>Ships</h6></div>
            <div class="text-white"><h4>@Model.Fleet.DisplayFleetItem.ShipServices</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Tonnage</h6></div>
            <div class="text-white"><h4>@Model.Fleet.DisplayFleetItem.TonnageLabel</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Average Displacement</h6></div>
            <div class="text-white"><h4>@Model.Fleet.DisplayFleetItem.DisplacementAverageLabel</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Average Length</h6></div>
            <div class="text-white"><h4>@Model.Fleet.DisplayFleetItem.LengthAverageLabel</h4></div>
        </div>
        <div style="width:20%">
            <div class="text-muted"><h6>Average Beam</h6></div>
            <div class="text-white"><h4>@Model.Fleet.DisplayFleetItem.BeamAverageLabel</h4></div>
        </div>
    </div>
</div>

<hr class="bg-light" />

<div class="d-flex flex-row">
    <div class="w-100 p-2">
        <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/shipservice-light.png",
                Label = @Model.Fleet.DisplayFleetItem.Name.ToUpper() + " SERVICE"
    }' />
        <div class="mt-3">
            <partial name="TableShipServices" model=@Model.Fleet.DisplayFleetItem.ShipServicesList.OrderBy(x => x.Name) />
        </div>
    </div>
</div>

<hr class="bg-light" />
