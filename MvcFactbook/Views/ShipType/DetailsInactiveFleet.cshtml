@model MvcFactbook.ViewModels.Models.Main.ShipTypeView

@{
    ViewData["Title"] = "Details";
}

<partial name="DetailsMain" />

<partial name="FleetItemDetails" model='new { Label = "INACTIVE FLEET", FleetItem = @Model.Fleet.InactiveFleet.FleetServicesTotal }' />

<hr class="bg-light" />

<div class="d-flex flex-row">
    <div class="w-50 p-2">
        <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/shipsubtype-light.png",
                Label = "BY SHIP SUB-TYPE"
            }' />
        <div class="d-flex flex-row">
            <partial name="ChartDonut" model='new { Id="ByCategoryChart", Items=@Model.Fleet.InactiveFleet.FleetServicesByShipSubType }' />
            <div class="mt-3 w-100" style="max-height:300px;overflow-y:auto;">
                @foreach (var item in Model.Fleet.InactiveFleet.FleetServicesByShipSubType)
                {
                    <div class="w-100 mb-2">
                        <a asp-controller="ShipType"
                           asp-action="DetailsFleetItem"
                           asp-route-id="@Model.Id"
                           asp-route-fleetType="Inactive"
                           asp-route-fleetItemListType="BySubType"
                           asp-route-fleetItemId="@item.Id">
                            <div class="d-flex flex-row">
                                <div class="mr-2">
                                    <img src="~/images/icons/shipsubtype-light.png" style="height:20px;opacity:0.4" />
                                </div>
                                <div class="mr-2">
                                    <div class="text-white">@item.Name</div>
                                </div>
                                <div class="mr-2">
                                    <img src="~/images/icons/chevron-right-light.png" style="height:20px;width:20px" />
                                </div>
                                <div class="mr-2">
                                    <div class="text-muted">@item.ShipServices</div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="w-50 p-2">
        <partial name="DetailsItemHeader" model='new {
                Icon = "/images/icons/branch-light.png",
                Label = "BY BRANCH"
            }' />
        <div class="d-flex flex-row">
            <partial name="ChartDonut" model='new { Id="ByTypeChart", Items=@Model.Fleet.InactiveFleet.FleetServicesByBranch }' />
            <div class="mt-3 w-100" style="max-height:300px;overflow-y:auto;">
                @foreach (var item in Model.Fleet.InactiveFleet.FleetServicesByBranch)
                {
                    <div class="w-100 mb-2">
                        <a asp-controller="ShipType"
                           asp-action="DetailsFleetItem"
                           asp-route-id="@Model.Id"
                           asp-route-fleetType="Inactive"
                           asp-route-fleetItemListType="ByBranch"
                           asp-route-fleetItemId="@item.Id">
                            <div class="d-flex flex-row">
                                <div class="mr-2">
                                    <img src="~/images/icons/branch-light.png" style="height:20px;opacity:0.4" />
                                </div>
                                <div class="mr-2">
                                    <div class="text-white">@item.Name</div>
                                </div>
                                <div class="mr-2">
                                    <img src="~/images/icons/chevron-right-light.png" style="height:20px;width:20px" />
                                </div>
                                <div class="mr-2">
                                    <div class="text-muted">@item.ShipServices</div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<hr class="bg-light" />
