@model MvcFactbook.Models.SucceedingClass

@{
    ViewData["Title"] = "Create";
}

<br />
<partial name="CreateMenu" model='new { Icon = "fas fa-plus-square" }' />
<br />

<div class="card border-0 w-75">
    <div class="card-header bg-secondary text-white">
        <div class="d-flex">
            <div><h5>Succeeding Class</h5></div>
            <div class="ml-auto"><h5><img src="~/images/icons/succeedingclass-light.png" style="height:20px;width:20px" /></h5></div>
        </div>
    </div>
    <div class="card-body bg-transparent text-dark">
        <form asp-action="Create">
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="PrecedingShipClass" class="input-group-text w-100"></label>
                </div>
                <select asp-for="ShipClassId" asp-items="ViewBag.PrecedingClasses" class="form-control rounded-right"></select>
                <span asp-validation-for="ShipClassId" class="text-danger"></span>
            </div>
            <div class="input-group mb-3 input-group">
                <div class="input-group-prepend w-25">
                    <label asp-for="SucceedingShipClass" class="input-group-text w-100"></label>
                </div>
                <select asp-for="SucceedingClassId" asp-items="ViewBag.SucceedingClasses" class="form-control rounded-right"></select>
                <span asp-validation-for="SucceedingClassId" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}